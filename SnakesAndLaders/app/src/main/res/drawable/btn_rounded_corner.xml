<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="15dip" />
            <stroke android:width="3dip" android:color="#00ff62" />
            <gradient android:angle="-90" android:endColor="#fdf753" android:startColor="#52eeff" />
            <!--android:endColor="#689a92" android:startColor="#345953"-->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="15dip" />
            <stroke android:width="3dip" android:color="#01e6ff" />
            <!--android:color="#01e6ff"-->
            <!--  <solid android:color="#58857e" />-->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dip" />
            <stroke android:width="3dip" android:color="#139c73" />
            <gradient android:angle="-90" android:endColor="#01e6ff" android:startColor="#01e6ff" />
            <!--android:endColor="#58857e" android:startColor="#8dbab3"-->
        </shape>
    </item>
</selector>